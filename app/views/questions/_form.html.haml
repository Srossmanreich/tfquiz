= simple_form_for(@question) do |f|
  = f.error_notification

  .form-inputs
    = f.input :t, length: 40
    = f.input :f, length: 40
    = f.association :topic
    = f.input :domain
    = f.input :public_comments
    = f.input :private_comments
    = f.input :active

  .form-actions
    = f.button :submit
